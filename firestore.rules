rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{userId} {
      // Admins can read/write all users (for teacher management)
      allow get, list, read, write: if isAdmin();

      // Each user can read/write their own record
      allow get, read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Students collection (as a root collection)
    match /students/{studentId} {
      // Admins can read/list/write all students
      allow get, list, read, write: if isAdmin();
    }
    
    // Classes collection with nested students
    match /classes/{classId} {
      // Admins can manage all classes
      allow get, list, read, write: if isAdmin();

      // Teachers can read their own class document
      allow get, read: if isTeacher() && classId == getUserData().classId;
      
      match /students/{studentId} {
        // Admins can manage all students in any class
        allow get, list, read, write: if isAdmin();

        // Teachers can read students in their assigned class
        allow get, list, read: if isTeacher() && classId == getUserData().classId;
      }
    }

    // Incidents collection
    match /incidents/{incidentId} {
      // Admin full access
      allow read, write: if isAdmin();

      // Teachers can create incidents for students in their class
      // and can read incidents they have created.
      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
      allow read: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }

    // Summaries collection
    match /summaries/{summaryId} {
      // Admins have full access
      allow read, write: if isAdmin();

      // Teachers can read summaries for students in their class
      allow read: if isTeacher() && resource.data.classId == getUserData().classId;
    }

    // --- Helper Functions ---
    function isAdmin() {
      return getUserData().role == "admin";
    }

    function isTeacher() {
      return getUserData().role == "teacher";
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
  }
}
